<UserControl x:Class="FDRCheck.Controls.VennyInputPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:FDRCheck.Models"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="0 1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <xctk:ColorPicker SelectedColor="{Binding Color}" Grid.Column="0"></xctk:ColorPicker>
        <xctk:WatermarkTextBox Text="{Binding FileName}" Watermark="File name" Margin="5 0 0 0" Grid.Column="1"></xctk:WatermarkTextBox>
        <Button Click="ButtonBrowse_Click" Grid.Column="2" Style="{StaticResource BrowseButton}"></Button>
        <xctk:WatermarkTextBox Text="{Binding Title}" Watermark="Title" Margin="5 0 0 0" Grid.Column="3"></xctk:WatermarkTextBox>
    </Grid>
</UserControl>